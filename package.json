{
  "name": "gpt-custom-server",
  "version": "1.0.0",
  "description": "Custom GPT server for interacting with files and running Jest tests",
  "main": "server.js",
  "scripts": {
    "local:start": "node server.js",
    "start": "docker-compose up --build",
    "ping": "curl localhost:3000/file",
    "test": "jest",
    "all": "node scripts/printMe.js",
    "ping:all": "curl localhost:3000/all-files",
    "ping:tests": "curl localhost:3000/all-tests"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "clipboardy": "^4.0.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jest": "^26.6.3",
    "prettier": "^3.2.5",
    "simple-git": "^3.24.0",
    "winston": "^3.13.0"
  },
  "prettier": {
    "singleQuote": true
  }
}
